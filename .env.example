# Veil Node Configuration
# Copy this file to .env and configure for your setup

DEBUG=false

# Veil RPC Node URL
# Default: https://api.veil.zelcore.io (public API)
# For local node: http://localhost:58810
VEIL_NODE_URL=https://api.veil.zelcore.io

# RPC Authentication (only needed for local/authenticated nodes)
# Leave blank for public API
VEIL_NODE_PASSWORD=
VEIL_NODE_USERNAME=

# Example local node configuration:
# VEIL_NODE_URL=http://localhost:58810
# VEIL_NODE_PASSWORD=your-rpc-password-from-veil.conf
# VEIL_NODE_USERNAME=veilrpc
